<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="5sp"
        android:textAllCaps="true"
        android:textColor="#f30"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Máy tính bỏ túi" />

    <EditText
        android:id="@+id/editTextSoThu1"
        android:hint="Nhập số thứ 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="#E91E63" />

    <EditText
        android:id="@+id/editTextSoThu2"
        android:hint="Nhập số thứ 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="#E91E63" />

    <TextView
        android:id="@+id/ButtonKetQua"
        android:textSize="20sp"
        android:textColor="#f30"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="15dp"
        tools:text="10 + 2 = 12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ButtonCong"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120sp"
            android:layout_marginRight="120sp" />

        <Button
            android:id="@+id/ButtonTru"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/ButtonReset"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ButtonNhan"
            android:layout_marginRight="120sp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120sp" />

        <Button
            android:id="@+id/ButtonChia"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>